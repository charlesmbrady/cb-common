{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@cb-common/data": ["libs/data/src/index.ts"],
      "@cb-common/lambda": ["libs/lambda/src/index.ts"],
      "@cb-common/mockdat-common": ["libs/mockdat-common/src/index.ts"],
      "@cb-common/salesforce": ["libs/salesforce/src/index.ts"],
      "@cb-common/ui-react": ["libs/ui-react/src/index.ts"],
      "@cb-common/ui-tailwind": ["libs/ui-tailwind/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
